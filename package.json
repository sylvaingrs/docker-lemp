{
  "type": "module",
  "scripts": {
    "up:prod": "docker compose up -d --build",
    "down:prod": "docker compose down",
    "lint": "eslint . --ext ts,tsx,js,jsx --max-warnings=0",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "format": "prettier --write .",
    "db:export:dev": "mysqldump -h127.0.0.1 -P3306 -uappuser -pmypassword appdb > $(node scripts/db-path.js)",
    "db:import:dev": "mysql -h127.0.0.1 -P3306 -uappuser -pmypassword appdb < $(node scripts/db-path.js)",
    "db:export:prod": "docker exec mariadb mariadb-dump -uappuser -pmypassword appdb > $(node scripts/db-path.js)",
    "db:import:prod": "docker exec -i mariadb mariadb -uappuser -pmypassword appdb < $(node scripts/db-path.js)"
  },
  "devDependencies": {
    "tailwindcss-animate": "^1.0.7"
  }
}
