{
  "type": "module",
  "scripts": {
    "up:prod": "docker compose up -d --build",
    "down:prod": "docker compose down",
    "lint": "eslint . --ext ts,tsx,js,jsx --max-warnings=0",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "format": "prettier --write .",
    "db:export:dev": "mysqldump --skip-comments --skip-triggers --skip-tz-utc --no-tablespaces --single-transaction -h127.0.0.1 -P3306 -uappuser -pmypassword appdb > mariadb/dumps/init-dev.sql",
    "db:import:dev": "mysql -h127.0.0.1 -P3306 -uappuser -pmypassword appdb < mariadb/dumps/init-dev.sql",
    "db:export:prod": "docker exec mariadb mariadb-dump --skip-comments --skip-tz-utc --no-tablespaces --single-transaction -uappuser -pmypassword appdb > mariadb/dumps/init-prod.sql",
    "db:import:prod": "docker exec -i mariadb mariadb -uappuser -pmypassword appdb < mariadb/dumps/init-prod.sql",
    "db:import:test": "mysql -h127.0.0.1 -P3307 -uapptestuser -pmytestpassword apptestdb < mariadb/dumps/test-empty.sql"
  },
  "devDependencies": {
    "tailwindcss-animate": "^1.0.7"
  }
}
