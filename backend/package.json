{
  "name": "api-node",
  "version": "1.0.0",
  "description": "API Node.js pour Raspberry Pi",
  "main": "dist/server.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn --env-file ../.env src/server.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/server.js",
    "start-db:dev": "docker compose -f docker-compose.dev.yml up -d",
    "stop-db:dev": "docker compose -f docker-compose.dev.yml down",
    "start-db:test": "docker compose -f docker-compose.test.yml up -d",
    "stop-db:test": "docker compose -f docker-compose.test.yml down",
    "test:prepare": "npm --prefix .. run db:import:test",
    "test": "npm run test:prepare && NODE_ENV=test dotenv -e .env.test -- jest --detectOpenHandles"
  },
  "dependencies": {
    "alpinejs": "^3.15.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.25",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.3",
    "better-sqlite3": "^12.4.1",
    "dotenv-cli": "^11.0.0",
    "jest": "^29.7.0",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
